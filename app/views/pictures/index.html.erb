<div class="content">
  <div class="container">
      <h1>投稿一覧</h1>
        <table>
          <thead>
            <div class="index"
            <tr>
              <th>投稿者</th>
              <th>タイトル</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @pictures.each do |picture| %>
              <tr>
                <td><%= link_to(picture.user.name, user_path(picture.user.id)) %></td>
                <td><%= link_to(picture.title, picture_path(picture.id)) %>
                <td><%= link_to '詳細', picture %></td>
                <td><%= link_to '編集', edit_picture_path(picture) %></td>
                <td><%= link_to '削除', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
<br>

      <%= link_to '新規投稿作成', new_picture_path, class:"operation_button" %>

  </div>
</div>
